@model FreeGrab.Models.Customer

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel='stylesheet' href='~/Content/Form/Graber.css' type='text/css' />

<div class="bg-contact2" style="background-image: url('/Content/Home/img/4.jpg');">
    <div class="container-contact2">
        <div class="wrap-contact2">


            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <span class="contact2-form-title">
                    LOGIN
                </span>
                @Html.ValidationSummary(true, "", new { @class = "text-danger textform" })
                <div class="row form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 textform" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control textform", @type = "email", placeholder = "Your Email" ,@required = "requied"} })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="row form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 textform" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control textform", @type = "password", placeholder = "Your Password" , @required = "requied" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="row form-group">
                    <div class="col-md-offset-2 col-md-10 textform">
                        <input type="submit" value="Login" class="btn btn-default" />

                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-offset-2 col-md-10 error-text">
                        @ViewBag.Message
                    </div>
                </div>

                <div>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "textform" })
                </div>
            </div>
               
            }


            @Html.ActionLink("Register Now?", "Register", "Home", null, new { @class = "textform" });
            @Html.ActionLink("Forgot Password?", "ForgotPassword", "Home", null, new { @class = "textform" });
        </div>



    </div>
</div>

