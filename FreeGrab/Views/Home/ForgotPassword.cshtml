@model FreeGrab.Models.Customer

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel='stylesheet' href='~/Content/Form/Graber.css' type='text/css' />

<div class="bg-contact2" style="background-image: url('/Content/Home/img/4.jpg');">
    <div class="container-contact2">
        <div class="wrap-contact2">



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <span class="contact2-form-title">
                       PLEASE ENTER YOUR EMAIL BEFORE RESET PASSWORD
                    </span>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger textform" })
                    <div class="form-group ">
                        <label class="control-label col-md-2 textform">Email </label>
                        @Html.TextBox("Email", "", new { @class = "form-control col-md-10", @placeholder = "Your email" })
                    </div>
                    <div class="form-group row">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-success" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @ViewBag.Message
                        </div>
                    </div>

                    


                    @Html.ActionLink("Register Now?", "Register", "AccountCustomer", null, new { @class = "textform" })

                </div>

            }

            </div>
            </div>
</div>

