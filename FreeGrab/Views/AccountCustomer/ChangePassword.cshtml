@model FreeGrab.Models.Customer


@{
    ViewBag.Title = "Update Your Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutUserManager.cshtml";
}
<link rel='stylesheet' href='~/Content/Form/Graber.css' type='text/css' />


<div class="container-contact2">
    <div class="wrap-contact2">

        @using (Html.BeginForm("ChangePassword", "AccountCustomer", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <span class="contact2-form-title">
                CHANGE YOUR PASSWORD
            </span>
            @Html.ValidationSummary(true, "", new { @class = "text-danger textform" })
            <div class="row form-group">
                <label class="col-md-2 textform">Old Password</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control textform", @type = "password", required = "required", placeholder = "Old Password" } })
                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group row">
                @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "control-label col-md-2 textform" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control textform", @type = "password", required = "required" })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2 textform" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control textform", @type = "password", required = "required" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group ">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default textform" />
                </div>
            </div>
            
            <div class="row form-group">
                <div class="col-md-offset-2 col-md-10">
                    @ViewBag.Message
                </div>
            </div>
        </div>

            <div>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "textform" })
            </div>


        }


        @Html.ActionLink("Register Now?", "Register", "Home", null, new { @class = "textform" })
        @Html.ActionLink("Forgot Password?", "ForgotPassword", "Home", null, new { @class = "textform" })
    </div>



</div>

