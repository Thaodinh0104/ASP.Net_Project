@model FreeGrab.Models.Customer


@{
    ViewBag.Title = "Update Your Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="hero" style="background: url(/Content/img/bacu.jpg); background-size: cover; background-position: center center">

    <div class="row  ">
        <div class="col-md-3">
            <section class="hero">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7">
                            <h1>Wellcome to our websites</h1><a href="#" class="hero-link">Discover More</a>
                        </div>
                    </div><a href=".intro" class="continue link-scroll"><i class="fa fa-long-arrow-down"></i> Scroll Down</a>
                </div>
            </section>
        </div>
        <div class="col-md-6 right form-group stt">
            <h2>Forgot Password</h2>

            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    <hr/>
                    <div class="text-success">
                        @ViewBag.Message
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-2">Email </label>
                        @Html.TextBox("Email", "", new { @class = "form-control col-md-10", @placeholder="Your email" })
                    </div>
                    <div class="form-group row">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-success" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @ViewBag.Message
                        </div>
                    </div>
                </div>
            }
            </div>
        <div class="col-md-3">
            <section class="hero">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7">
                            <h1>Wellcome to our websites</h1><a href="#" class="hero-link">Discover More</a>
                        </div>
                    </div><a href=".intro" class="continue link-scroll"><i class="fa fa-long-arrow-down"></i> Scroll Down</a>
                </div>
            </section>
        </div>
    </div>

</div>



@Scripts.Render("~/Scripts/Home/Display.js")